# ===========================================
# TWILIO AI COACH - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# SUPABASE (Required)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# TWILIO (Required)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_TWIML_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=your-api-key-secret

# DEEPGRAM (Required for live transcription)
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-key

# ANTHROPIC (Required for AI coaching)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# OPENAI (Optional - for alternate AI provider)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=sk-proj-xxx

# RETELL AI (Optional - for AI voice agents)
# Get from: https://www.retellai.com/
RETELL_API_KEY=key_xxx
RETELL_AGENT_ID=agent_xxx

# SERVER
PORT=3002

# COMPANY VARIABLES (Used in AI agent prompts)
COMPANY_NAME=Your Company
PRODUCT_NAME=Your Product
REP_NAME=Sales Rep

# NGROK (Development only - for local webhooks)
NGROK_AUTHTOKEN=your-ngrok-token
